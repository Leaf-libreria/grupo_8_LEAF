<!DOCTYPE html>
<html lang="es">
  <!-- ----head ----->
<%-include('../partials/head') %> 
<!-- ----head---- -->

  <body class="admin">
    <!-- encabezado -->
   <!-- ----header ----->
   <%-include('../partials/header') %> 
   <!-- ----header---- -->
    <main>
        <h2>Carga de productos</h2>
        <!--FORMULARIO-->
        <div class="administrador">
  <form action="/products/editar/<%=productoEditado.id%>?_method=PUT" method="POST" class="formulario">
      <div class="titulo">
          <label for="title">Título del libro:</label>
          <input type="text" name="title" id="title" class="control" placeholder="Ej: El señor de los anillos">
      </div>
      <div class="id">
          <label for="id" >ID del producto:</label>
          <input type="text" name="id" id="id" class="control" placeholder="Escriba aquí">
      </div>
    </section>
    <section class="isbn">
      <label for="isbn">ISBN:</label>
      <div class="isbn-btn">
      <input type="number" name="isbn" id="isbn" class="control" placeholder="10 ó 13 Dígitos">
    </div> 
</section>
    <div class="stock">
        <label for="stock">Stock:</label>
        <input type="number" name="stock" id="stock" class="control" placeholder="Ingrese números">
    </div>
   <section class="format">
       <label for="format">Formato:</label> 
       <select name="format" id="format">
           <option value="" hidden selected>Seleccione el formato</option>
           <option value="libro">Libro</option>
           <option value="ebook">Ebook</option>
       </select>
         </section>
         <section class="category">
          <label for="category">Categoría:</label> 
          <select name="category" id="categoria">
              <option value="" hidden selected>Seleccione la categoria</option>
              <option value="recomendados">Recomendados</option>
              <option value="novedades">Novedades</option>
              <option value="mas-vendidos">Más vendidos</option>
          </select>
            </section>
   <section class="author">
        <label for="author">Autor/Autora:</label>
    <div class="otroAutor">
        <input type="text" name="author" id="otroAutor" placeholder="Otro. Nombre y apellido del autor" class="control">
    </div>
    </section>
<section class="editorial">
    <label for="editorial">Editorial:</label>
    <div class="otraEditorial">
        <input type="text" name="editorial" id="OtraEditorial" placeholder="Otro. Ej: Planeta" class="control">
    </div>
</section>
<section class="genre">
    <label for="genre">Género</label>
    <div class="otroGenero">
        <input type="text" name="genre" id="otroGenero" placeholder="Otro. Ej: Fantasía" class="control">
    </div>
</section>
<div class="price">
    <label for="price">Precio $:</label>
    <input type="number" name="price" id="price" class="control" placeholder="Ingrese sólo números">
</div>
<div class="pages">
    <label for="paginas">Páginas:</label>
    <input type="number" name="pages" id="pages" class="control" placeholder="Sólo números">
</div>
<div class="critic">
  <label for="critica">Crítica:</label>
  <textarea  type="text" name="critic" id="critic" class="control" placeholder="Breve critica"></textarea>
</div>
<div class="stars">
  <label for="estrellas">Estrellas:</label>
  <input type="text" name="stars" id="stars" class="control" placeholder="N° de estrellas">
</div>
<div class="cover">
  <label for="portada">Imagen de portada:</label>
  <input  class="file" type="file" name="cover" id="cover">
  </div>
<div class="synopsis">
     <label for="sinopsis">Sinopsis:</label>
     <textarea name="synopsis" id="synopsis" cols="20" rows="10" placeholder="Sinopsis del libro">
    </textarea>
</div>
<p>*Todos los campos son obligatorios</p>
<!--BOTONES-->
<section class="botones">
    <button type="reset" class="btn-cancelar">CANCELAR</button>

    <button type="submit" class="btn-guardar">AGREGAR</button>
</section>
  </form>  
</div>
    </main>
    <!-- ----scripts ----->
 <%-include('../partials/scripts') %> 
 <!-- ----scripts---- -->
</body>
</html>