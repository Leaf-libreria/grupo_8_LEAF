<!DOCTYPE html>
<html lang="es">
<!-- ----head ----->
<%-include('../partials/head') %>
    <!-- ----head---- -->

    <body class="novedades admin">
        <!-- encabezado -->
        <!-- ----header ----->
        <%-include('../partials/header') %>
            <!-- ----header---- -->
            <main>
                <div class="card mt-5 ">
                    <div class="card-header">
                        <h3>Agregar Imagen para publicidad:</h3>
                    </div>
                    <div class="card-body administrador">
                        <form action="" method="POST" class="formulario"  enctype="multipart/form-data">
                            <label for="promoImage">Imagen:</label>
                            <input type="file" name="promoImage" id="promoImage"
                                value="<%= locals.old &&locals.old.promoImage ? old.promoImage : null %> ">
                            <!-- Posibles errores -->
                            <span>
                                <%= locals.errores && locals.errores.promoImage ?errores.promoImage.msg :null %>
                            </span>
                            <!--BOTONES-->
                            <section class="botones d-grid gap-2 d-md-block">
                                <button type="submit" class="btn-guardar">AGREGAR</button>
                                <a href="/products/administrador" class="btn-cancelar" type="button">CANCELAR</a>
                            </section>

                        </form>
                    </div>

                </div>
            </main>
    </body>

</html>