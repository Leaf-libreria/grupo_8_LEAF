<html lang="es">
    <!-- ----head ----->
    <%-include('../partials/head') %>
      <!-- ----head---- -->
      <body class="admin">
        <!-- encabezado -->
        <!-- ----header ----->
        <%-include('../partials/header') %>
          <!-- ----header---- -->
        <main  class=" carruselEjs">
          <div class="card mt-5 ">
            <div class="card-header">
                <h3>Editar imagen de carrusel:</h3>
            </div>
            <div class="imageEditarCarrusel  m-5" ><img src="/images/<%= image.name %>" class="w-100 p-3 m-auto" alt=""></div>
            <div class="card-body administrador">
                <form action="/products/carruselEditar/<%=image.id%>?_method=PUT" method="POST" id="edit-carousel-form" class="formulario" enctype="multipart/form-data" >
                    <label for="carouselImage">Cargar nueva imagen:</label>
                    <input type="file" name="carouselImage" id="carouselImage" value="<%= locals.old &&locals.old.carouselImage ? old.carouselImage : null %> ">
                    <!-- Posibles errores -->
                    <span>
                        <%= locals.errores && locals.errores.carouselImage ?errores.carouselImage.msg :null %>
                    </span>
                       <!-- previsualiza imagen -->
            <div id="image-render" class="w-100 m-5" ><img  id="image" class="w-100"></div>
                    <!--BOTONES-->
                    <section class="botones d-grid gap-2 d-md-block">
                        <button type="submit" class="btn-guardar">AGREGAR</button>
                        <a href="/products/administrador" class="btn-cancelar" type="button">CANCELAR</a>
                    </section>

                </form>
            </div>

        </div>
        </main>
              <!-- ----scripts ----->
      <%-include('../partials/scripts') %>
      <script src="/javascripts/editCarouselRenderImage.js"></script>
      <!-- ----scripts---- -->
</body>

</html>