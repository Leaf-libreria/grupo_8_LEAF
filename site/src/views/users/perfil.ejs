<!DOCTYPE html>
<html lang="es">

<!-- ----head ----->
<%-include('../partials/head') %>
  <!-- ----head---- -->

  <body class="body-register perfil">
    <!-- Imagen de costado = tablet/desktop -->
    <section class="contenido-gral-register">
      <div class="imgcostado-register" style="width: 18rem;">
        <img src="/images/<%=user.image%>" class="card-img-top" alt="imagen de usuario">
        <div class="card-body">

          <p>
            <%=user.nickname ? user.nickname : user.name%>
          </p>
      </div>
        <!-- REDES SOCIALES -->
        <ul class="redes-register">
          <li>
            <h5>Seguinos en redes sociales</h5>
          </li>
          <li><a href="https://www.facebook.com/Librer%C3%ADa-LEAF-102157472264108"><i class="fab fa-facebook-square"></i></a></li>
          <li><a href="https://www.instagram.com/libreria_leaf/"><i class="fab fa-instagram-square"></i></a></li>
          <li><a href="https://twitter.com/libreria_leaf"><i class="fab fa-twitter-square"></i></a></li>
        </ul>
      </div>

      <div class="conclase-register perfil-div">
        <section class="header-register g-col-4">
          <a href="/products/carrito" class="icono-carrito"><i class="fas fa-shopping-cart "></i></a>
          <!-- editar perfil -->
          <a href="/users/editarPerfil/<%=user.id  %> "   type="button" class="btn btn-outline-warning">
              Editar perfil<i class="fas fa-edit"></i>
            </a>
          
              <form action="/users/usuario/eliminarCuenta/<%= user.id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-outline-danger btn-eliminar-cuenta" onclick="return confirm('¿Estás seguro? Te vamos a extrañar TT__TT')"> Eliminar cuenta<i class="fas fa-trash-alt"></i></button>
              </form>
        </section>

        <main class="main-register perfil-main">

          <a href="/" class="boton-home"><i class="fas fa-angle-double-left"></i> Home</a>
          <h2 class="bienvenido-perfil">Bienvenid@ <%=user.nickname ? user.nickname : user.name%>
          </h2>
          <div class="cont-perfil">
            <!-- Posible error -->
            <span></span>
            <!-- NICK -->
            <div class="nombre">
              <h5>NickName</h5>
              <p>
                <%=user.nickname%>
              </p>
            </div>

            <div class="nombre">
              <h5>Nombre</h5>
              <p>
                <%=user.name%>
              </p>
            </div>

            <div class="apellido">
              <h5>Apellido</h5>
              <p>
                <%=user.lastname%>
              </p>
            </div>

            <div class="registro-correo">
              <h5>Correo electrónico</h5>
              <p>
                <%=user.email%>
              </p>

            </div>
          </div>
          <!-- Posible error -->
          <span></span>

          <!-- <button type="button" class="btn btn-outline-warning"><b>Cerrar sesion</b> </button> -->
          <li class="nav-item">
            <a class="nav-link" href="/users/logout"><b>CERRAR SESIÓN</b> </a>
          </li>
        </main>
      </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"></script>
  </body>

</html>