<!DOCTYPE html>
<html lang="es">
<!-- ----head ----->
<%-include('../partials/head') %>
  <!-- ----head---- -->

  <body class="novedades admin">
    <!-- encabezado -->
    <!-- ----header ----->
    <%-include('../partials/header') %>
      <!-- ----header---- -->
      <main>
        <div class="card mt-5 ">
          <div class="card-header">
            <h3>Editar rol del usuario <%= userEdit.name %> <%= userEdit.lastname %>  :</h3>
          </div>
          <div class="card-body administrador">
            <form action="/users/editarRolUsuario/<%=userEdit.id%>?_method=PUT " method="POST" class="formulario">
            <label for="rolUsuario">Rol de usuario:</label>
            <select name="rolId" id="rolUsuario">
              <option value="" hidden selected>Seleccione el rol</option>
              <% roles.forEach(rol=> { %>
                <option value="<%= rol.id %>" <%= rol.id == userEdit.rolId ? 'selected' : null %> > <%= rol.name %>
                </option>
                <% }) %>
            </select>

              <!-- Posibles errores -->
              <span>
                <%= locals.errores && locals.errores.rols ?errores.rols.msg :null %>
              </span>

              <!--BOTONES-->
              <section class="botones d-grid gap-2 d-md-block">
                <button type="submit" class="btn-guardar">EDITAR</button>
                <a href="/products/administrador" class="btn-cancelar" type="button">CANCELAR</a>
              </section>

            </form>
          </div>

        </div>
      </main>
  </body>
<!-- ----scripts ----->
<%-include('../partials/scripts') %>
  <!-- ----scripts---- -->
</html>