<body class="body-register ">
    <!-- Imagen de costado = tablet/desktop -->
    <section class="contenido-gral-register">
        <div class="imgcostado-register" style="width: 18rem;">
            <img src="/images/logo-leaf-remaster.png" class="card-img-top" alt="Logo de leaf">
            <div class="card-body">
                <h4 class="card-title">¡Bienvenido nombre!</h4>
                   
            </div>
            <!-- REDES SOCIALES -->
            <ul class="redes-register">
                <li>
                    <h5>Seguinos en redes sociales</h5>
                </li>
                <li><a href=""><i class="fab fa-facebook-square"></i></a></li>
                <li><a href=""><i class="fab fa-instagram-square"></i></a></li>
                <li><a href=""><i class="fab fa-twitter-square"></i></a></li>
            </ul>
        </div>

        <div class="conclase-register">
            <section class="header-register">
               <a href="/products/carrito" class="icono-carrito"><i class="fas fa-shopping-cart "></i></a>
                <!-- editar perfil -->
            <div><a href="/"  class="editar-perfil"><p>Home</p></a></div> 
            </section>

            <main class="main-register">
                <form action="" method="GET" enctype="multipart/form-data">
                    <a href="/users/perfil"><i class="fas fa-angle-double-left"></i> Atras</a>
                    <h2>Editando perfil</h2>

                    <div class="registro-correo"> <label for="registro-correo">Correo electrónico</label><input type="email" name="email" id="email"
                            placeholder="nombre@correo.com">
                    </div>
                    <!-- Posible error -->
                    <span></span> 

                    <div class="nombre"><label for="nombre">Nombre(s)</label><input type="nombre" name="nombre" id="nombre"
                            placeholder="Nombre(s)">
                    </div>

                    <div class="apellido"> <label for="apellido">Apellido(s)</label> <input type="apellido" name="apellido" id="apellido"
                            placeholder="Apellido(s)">
                    </div>

                    <!-- NICK -->
                    <div class="nombre"><label for="nickName">NickName</label><input type="nickName" name="nickName" id="nickName"
                        placeholder="NickName">
              
                    </div> 

                    <div class="registro-password"> <label for="registro-password">Editar contraseña</label> <input type="password" name="password"
                            id="password" placeholder="Contraseña">
                    </div>

                    <div class="confirm-password"> <label for="confirm-password">Confirmar contraseña</label> <input type="confirm-password"
                            name="Confirmar contraseña" id="Confirm password" placeholder="Confirmar contraseña">
                    </div>

                    <!-- Posible error -->
                    <span></span>


                 

                    <div >
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
                </form>
            </main>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
</body>

