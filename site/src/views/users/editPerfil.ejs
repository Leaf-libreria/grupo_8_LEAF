<!DOCTYPE html>
<html lang="es">

<!-- ----head ----->
<%-include('../partials/head') %> 
<!-- ----head---- -->

<body class="body-register perfil">
    <!-- Imagen de costado = tablet/desktop -->
    <section class="contenido-gral-register">
        <div class="imgcostado-register" style="width: 18rem;">
            <img src="/images/<%=user.image%>" class="card-img-top" alt="Logo de leaf">
            <div class="card-body">
              
            <p><%=user.nombre%></p></div>
            <!-- REDES SOCIALES -->
            <ul class="redes-register">
                <li>
                    <h5>Seguinos en redes sociales</h5>
                </li>
                <li><a href=""><i class="fab fa-facebook-square"></i></a></li>
                <li><a href=""><i class="fab fa-instagram-square"></i></a></li>
                <li><a href=""><i class="fab fa-twitter-square"></i></a></li>
            </ul>
        </div>

        <div class="conclase-register perfil-div">
            <section class="header-register">
               <a href="/products/carrito" class="icono-carrito"><i class="fas fa-shopping-cart "></i></a>
                <!-- editar perfil -->
            <div><a href="/" class="editar-perfil"><p>Home</p></a></div> 
            </section>

            <main class="main-register perfil-main">
                <form action="/users/editarPerfil/<%=user.id%>?_method=PUT" method="POST" novalidate enctype = "multipart/form-data">
                    <a href="/users/perfil/<%=user.id%>"><i class="fas fa-angle-double-left"></i> Atras</a>
                    <h2  class="bienvenido-perfil">Editando perfil </h2>
                    <div class="nombre">
                        <label for="imagenPerfil" class="form-label">Cambiar imagen</label>
                        <input type="file" class="form-control" id="imagenPerfil" name="image">
                    </div>
                         <!-- NICK -->
                    <div class="nombre"><label for="nickName">NickName</label><input type="nickName" name="nickName" id="nickName"
                        value="<%= locals.old && locals.old.nickName ? old.nickName : user.nickName %> ">
                        <span class="text-danger small"><%= locals.errores && locals.errores.nickName ? errores.nickName.msg :null %></span>
              
                    </div> 
                    <div class="nombre"><label for="nombre">Nombre(s)</label><input type="nombre" name="nombre" id="nombre"
                        value="<%= locals.old && locals.old.nombre ? old.nombre : user.nombre %> ">
                    </div>
                    <span class="text-danger small"><%= locals.errores && locals.errores.nombre ? errores.nombre.msg :null %></span>

                    <div class="apellido"> <label for="apellido">Apellido(s)</label> <input type="apellido" name="apellido" id="apellido"
                        value="<%= locals.old && locals.old.apellido ? old.apellido : user.apellido %> ">
                    </div>
                    <span class="text-danger small"><%= locals.errores && locals.errores.apellido ? errores.apellido.msg :null %></span>

                   
                    <div class="registro-correo"> <label for="registro-correo">Correo electr칩nico</label><input type="email" name="email" id="email"
                        value="<%= locals.old && locals.old.email ? old.email : user.email %> ">
                    </div>
                    <span class="text-danger small"><%= locals.errores && locals.errores.email ? errores.email.msg :null %></span>

                    <div class="registro-password"> <label for="registro-password">Editar contrase침a</label> <input type="password" name="password"
                            id="password"  value="<%= user.password %> ">
                    </div>
                    <span class="text-danger small"><%= locals.errores && locals.errores.password ? errores.password.msg :null %></span>

                    <div class="confirm-password"> <label for="confirm-password">Confirmar contrase침a</label> <input type="password"
                            name="confirmarContrasenia" id="Confirm password" placeholder="Confirmar contrase침a">
                    </div>
                    <span class="text-danger small"><%= locals.errores && locals.errores.confirmarContrasenia ? errores.confirmarContrasenia.msg :null %></span>


                    <div >
						<button type="submit" class="editarPerfil">Guardar</button>
					</div>
                </form>
            </main>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
</body>

</html>